<%= form_with(model: @category) do |f| %>
    
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.submit "Create Category" %>
    </div>
    
<% end %>