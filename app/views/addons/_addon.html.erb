<div class="col">
    <div class="card h-100">
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="d-flex justify-content-between">
                <h6 class="card-title"><%= addon.name %></h6>
                <% if can? :manage, Addon %>
                    <div class="d-flex">
                        <%= link_to icon('fa-solid', 'pen-to-square'), edit_category_service_addon_path(addon.service.category, addon.service, addon), data: { turbo_frame: 'modal' }, class:"btn btn-outline-primary btn-sm" %>
                        <%= button_to icon('fa-solid', 'xmark'), category_service_addon_path(addon.service.category, addon.service, addon),
                        method: :delete, form: { data: { turbo_confirm: "Delete addon #{addon.name}?" } }, class:"btn btn-outline-danger btn-sm w-100" %>
                    </div>  
                <% end %>
            </div>
            <p class="card-text">+<%= addon.price %>php</p>
        </div>
    </div>
</div>