<%= form_with(model: [@category, @service]) do |f| %>
    
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div>
        <%= f.label :price %>
        <%= f.number_field  :price, step: :any %>
    </div>

    <div>
        <%= f.submit "Create Service" %>
    </div>
    
<% end %>