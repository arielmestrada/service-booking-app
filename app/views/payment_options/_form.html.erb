<%= form_with(model: [@user, payment_option]) do |f| %>
    
    <div class="mb-3">
        <%= f.label :card_type, class:"form-label" %>
        <%= f.select :card_type, [ 'VISA','MasterCard','PayPal' ], :prompt => 'Select One', class:"form-select" %>
    </div>

    <div class="mb-3">
        <%= f.label :card_number, class:"form-label" %>
        <%= f.number_field :card_number, class:"form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :expiry_date, class:"form-label" %>
        <%= f.date_field  :expiry_date, class:"form-control" %>
    </div>

    <div class="mb-3">
        <%= f.label :registered_name, class:"form-label" %>
        <%= f.text_field  :registered_name, class:"form-control" %>
    </div>

    <div class="mb-3">
        <%= f.submit class:"btn btn-primary" %>
    </div>
    
<% end %>